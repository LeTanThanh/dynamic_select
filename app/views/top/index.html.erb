<div class="container">
  <h2>
    Select country and city
  </h2>

  <form class="form-horizontal">
    <div class="form-group">
      <%= label_tag :country, "Select Country", class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= select_tag :country_id, options_from_collection_for_select(Country.all, :id, :name, selected: @country.id),
          class: "form-control js-select-country" %>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag :city_id, "Select City", class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= select_tag :country_id, options_from_collection_for_select(@cities, :id, :name, selected: @city.id),
          class: "form-control js-select-city" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= button_tag "Send", type: "submit", class: "btn btn-primary" %>
      </div>
    </div>
  </form>
</div>

<script type="text/javascript">
  <%= render "index.js" %>
</script>
